/* 3. Un reporte con dos resultados, por un lado el total de la cobranza de toda la cadena
completa (todas las sucursales) y por otro lado la cobranza agrupada por sucursales. Todo esto
debe ocurrir entre dos fechas pasadas como par√°metros (fecha desde y fecha hasta).*/
[
  {
    $addFields:
      /**
       * newField: The new field name.
       * expression: The new field expression.
       */
      {
        fecha_formato_date: {
          $dateFromString: {
            dateString: "$fecha",
            format: "%Y-%m-%d",
          },
        },
      },
  },
  {
    $match:
      /**
       * query: The query in MQL.
       */
      {
        fecha_formato_date: {
          $gte: new Date("2023-01-01"),
          $lte: new Date("2023-02-01"),
        },
      },
  },
  {
    $group:
      /**
       * _id: The id of the group.
       * fieldN: The first field name.
       */
      {
        _id: "$nroSucursal",
        total_ventas: {
          $sum: "$totalFactura",
        },
      },
  },
  {
    $group:
      /**
       * _id: The id of the group.
       * fieldN: The first field name.
       */
      {
        _id: null,
        ventas: {
          $push: {
            sucursal: "$_id",
            total_ventas_sucursal:
              "$total_ventas",
          },
        },
        total_ventas: {
          $sum: "$total_ventas",
        },
      },
  },
  {
    $project:
      /**
       * specifications: The fields to
       *   include or exclude.
       */
      {
        _id: 0,
        ventas: 1,
        total_ventas: 1,
      },
  },
]
