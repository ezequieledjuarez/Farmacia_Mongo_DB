/* 8. Ranking compras agrupadas por cliente y por sucursal. (quiero ver como compraron los
clientes intra-sucursal)
 */
[
  {
    $group:
      /**
       * _id: The id of the group.
       * fieldN: The first field name.
       */
      {
        _id: "$cliente.dni",
        total_ventas: {
          $sum: 1,
        },
      },
  },
  {
    $group:
      /**
       * _id: The id of the group.
       * fieldN: The first field name.
       */
      {
        _id: "$_id",
        total_ventas: {
          $sum: "$total_ventas",
        },
      },
  },
  {
    $project:
      /**
       * specifications: The fields to
       *   include or exclude.
       */
      {
        _id: 1,
        total_ventas: -1,
      },
  },
  { $sort: { total_ventas: -1 } }
]
