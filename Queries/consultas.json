db.getCollection('venta').aggregate(
  [
    {
      $addFields: {
        fecha_formato_date: {
          $dateFromString: {
            dateString: '$fecha',
            format: '%Y-%m-%d'
          }
        }
      }
    },
    {
      $match: {
        fecha_formato_date: {
          $gte: ISODate(
            '2023-01-01T00:00:00.000Z'
          ),
          $lte: ISODate(
            '2023-02-01T00:00:00.000Z'
          )
        }
      }
    },
    {
      $group: {
        _id: '$nroSucursal',
        total_ventas_sucursal: {
          $sum: '$totalFactura'
        }
      }
    },
    {
      $group: {
        _id: null,
        total: { $sum: '$total_ventas_sucursal' }
      }
    }
  ],
  { maxTimeMS: 60000, allowDiskUse: true }
);
